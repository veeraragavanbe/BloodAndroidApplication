<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:layout_width="match_parent"
  android:layout_height="match_parent" android:background="#0b15e0">
    <EditText 
    	android:layout_height="wrap_content" 
    	android:id="@+id/editText1" 
    	android:hint="enter message" 
    	android:layout_alignParentLeft="true" android:layout_width="match_parent">
    </EditText>
    
    <TextView 
    	android:layout_below="@+id/editText1" 
    	android:text="Location" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/textView1" 
    	android:layout_alignLeft="@+id/editText1" 
    	android:layout_width="match_parent">
    </TextView>
    
    <Button 
    	android:layout_width="wrap_content" 
    	android:layout_height="wrap_content" 
    	android:id="@+id/button1" 
    	android:layout_centerInParent="true" android:layout_below="@+id/textView1" android:text="send">
    </Button>
</RelativeLayout>
